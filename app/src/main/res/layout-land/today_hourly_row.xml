<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:shadowColor="#848484"
        android:shadowRadius="6"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left"
        android:textColor="#e1e1e1"
        android:id="@+id/today_hourly_day" />

    <TextView
        android:shadowColor="#626262"
        android:shadowRadius="6"
        android:text="TextView"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_hourly_day"
        android:textColor="#f0f0f0"
        android:id="@+id/today_hourly_time" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"


        android:layout_toRightOf="@+id/today_hourly_day"

        android:id="@+id/today_hourly_imageView" />

    <TextView
        android:shadowColor="#626262"
        android:shadowRadius="6"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/today_hourly_imageView"
        android:id="@+id/today_hourly_condition"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textColor="#cecece"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        />

    <TextView
        android:shadowColor="#6c6c6c"
        android:shadowRadius="6"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_hourly_condition"
        android:layout_toRightOf="@+id/today_hourly_imageView"
        android:id="@+id/today_hourly_temperature"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#cacaca"
        android:gravity="end"/>
</RelativeLayout>